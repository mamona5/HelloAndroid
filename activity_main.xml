<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/bulb"
        android:src="@drawable/lightbulb3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/create"
        android:text="@string/lightup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_medium"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimary"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/Udacity" />

    <TextView
        android:id="@+id/Udacity"
        android:text="@string/udacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_large"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/create"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/padding_text"
        android:paddingBottom="@dimen/padding_text" />

    <TextView
        android:id="@+id/address"
        android:text="@string/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Udacity"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignLeft="@id/Udacity"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/phonenumber"
        android:text="@string/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignLeft="@id/Udacity"
        android:textSize="@dimen/text_small"
        android:autoLink="phone"/>

    <TextView
        android:id="@+id/website"
        android:text="@string/website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_small"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/phonenumber"
        android:layout_alignLeft="@+id/address"
        android:autoLink="web"/>

    <ImageView
        android:id="@+id/map"
        android:src="@drawable/map"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_below="@id/Udacity"
        android:layout_alignTop="@id/address"
        android:layout_toStartOf="@id/address"
        android:padding="@dimen/padding_icon"/>

    <ImageView
        android:id="@+id/websiteicon"
        android:src="@drawable/websiteicon"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_toStartOf="@id/website"
        android:layout_alignTop="@id/website"
        android:padding="@dimen/padding_icon"/>

</RelativeLayout>

